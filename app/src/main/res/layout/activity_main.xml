<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Accueil_background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonBestiaire"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/bouton_accueil"
        android:onClick="bestiaireChemin"
        android:text="Bestiaire"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.10"
        app:layout_constraintStart_toEndOf="@id/buttonJeu"
        app:layout_constraintWidth_percent="0.33" />

    <Button
        android:id="@+id/buttonCarte"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/bouton_accueil"
        android:onClick="carteChemin"
        android:text="Carte"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonJeu"
        app:layout_constraintHeight_percent="0.10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.33" />

    <Button
        android:id="@+id/buttonJeu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/bouton_accueil"
        android:onClick="jeuChemin"
        android:text="Jeu"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonBestiaire"
        app:layout_constraintHeight_percent="0.10"
        app:layout_constraintStart_toEndOf="@id/buttonCarte"
        app:layout_constraintWidth_percent="0.33" />

</androidx.constraintlayout.widget.ConstraintLayout>